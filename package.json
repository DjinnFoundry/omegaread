{
  "name": "omegaread",
  "version": "0.1.0",
  "private": true,
  "description": "OmegaAnywhere \u2014 Plataforma educativa open source para ni\u00f1os de 4-8 a\u00f1os",
  "license": "AGPL-3.0",
  "scripts": {
    "dev": "pnpm --filter @omegaread/web dev",
    "build": "pnpm --filter @omegaread/web build",
    "db:generate": "pnpm --filter @omegaread/db generate",
    "db:migrate": "pnpm --filter @omegaread/db migrate",
    "db:push": "pnpm --filter @omegaread/db push",
    "db:studio": "pnpm --filter @omegaread/db studio",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp",
      "@next/swc-darwin-arm64"
    ]
  }
}