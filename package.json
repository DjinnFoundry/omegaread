{
  "name": "omegaread",
  "version": "0.1.0",
  "private": true,
  "description": "OmegaAnywhere — Plataforma educativa open source para niños de 4-8 años",
  "license": "AGPL-3.0",
  "scripts": {
    "dev": "pnpm --filter @omegaread/web dev",
    "build": "pnpm --filter @omegaread/web build",
    "db:generate": "pnpm --filter @omegaread/db generate",
    "db:migrate": "pnpm --filter @omegaread/db migrate",
    "db:push": "pnpm --filter @omegaread/db push",
    "db:studio": "pnpm --filter @omegaread/db studio",
    "db:seed-topics": "pnpm --filter @omegaread/db seed-topics",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "pnpm -r typecheck",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp",
      "@next/swc-darwin-arm64"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/eslint": "^9.6.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^17.3.0",
    "jsdom": "^28.1.0",
    "prettier": "^3.8.1",
    "typescript-eslint": "^8.56.0",
    "vitest": "^4.0.18"
  }
}