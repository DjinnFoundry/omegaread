# Base de datos PostgreSQL
DATABASE_URL="postgresql://localhost:5432/omegaread"

# Auth (secreto para JWT / sesiones)
# ⚠️  MUST be at least 32 characters for HS256 security. Generate with:
#   openssl rand -base64 32
# In production, AUTH_SECRET is REQUIRED — the app will refuse to start without it.
AUTH_SECRET="cambiar-en-produccion-genera-con-openssl-rand-base64-32"

# LLM para historias (Sprint 2)
# Recomendado: z.ai Code subscription
ZAI_API_KEY=""
# Opcional (si no se define, se usa este valor por defecto)
ZAI_BASE_URL="https://api.z.ai/api/coding/paas/v4"
LLM_MODEL="glm-5"
# Opcional: para reducir latencia en modelos con razonamiento
ZAI_THINKING_TYPE="disabled"
# Opcional: prompt de historia compacto (recomendado para velocidad)
LLM_FAST_STORY_PROMPT="true"
# Opcionales de transporte
LLM_TIMEOUT_MS="45000"
LLM_MAX_RETRIES="0"
# Opcionales de tuning de salida por llamada
LLM_MAX_TOKENS_STORY="900"
LLM_MAX_TOKENS_QUESTIONS="650"
LLM_MAX_TOKENS_REWRITE="1200"
# Opcionales de modelo por tarea
# LLM_MODEL_STORY="glm-5"
# LLM_MODEL_QUESTIONS="glm-5"
# LLM_MODEL_REWRITE="glm-5"

# Fallback OpenAI directo (opcional)
OPENAI_API_KEY=""

# Entorno
NODE_ENV="development"

# Dev admin auto-creation (login with admin@admin.com / admin)
# Only works when NODE_ENV != 'production'. Set to "true" to enable.
DEV_ADMIN_ENABLED="true"
